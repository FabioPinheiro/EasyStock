<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="epic.easystock"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <permission
        android:name="epic.easystock.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="epic.easystock.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!-- android:theme="@style/AppTheme" -->
        <activity
            android:name="epic.easystock.activitys.SignInActivity"
            android:label="@string/title_activity_sign_in" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="epic.easystock.GCMIntentService" />

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="epic.easystock" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="epic.easystock" />
            </intent-filter>
        </receiver>

        <activity
            android:name="epic.easystock.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="epic.easystock.RegisterActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="epic.easystock.activitys.ProductListActivity"
            android:label="@string/title_activity_product_list" >
        </activity>
        <activity
            android:name="epic.easystock.activitys.TestAddToProductListActivity"
            android:label="@string/title_activity_test_add_to_product_list" >
        </activity>
        <activity
            android:name="epic.easystock.activitys.PantyActivity"
            android:label="@string/title_activity_panty" >
        </activity>
        <activity
            android:name="epic.easystock.ExampleActivity"
            android:label="@string/title_activity_example" >
        </activity>
        <activity
            android:name="epic.easystock.activitys.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="epic.easystock.activitys.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="epic.easystock.activitys.MyPantriesActivity"
            android:label="@string/title_activity_my_pantries" >
        </activity>
    </application>

</manifest>
