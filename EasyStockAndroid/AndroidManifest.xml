<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="epic.easystock"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="epic.easystock.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="epic.easystock.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >

        <!-- android:theme="@style/AppTheme" -->
        <activity
            android:name="epic.easystock.HomeActivity"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="epic.easystock.GCMIntentService" />

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="epic.easystock" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="epic.easystock" />
            </intent-filter>
        </receiver>
        
        <activity
            android:name="epic.easystock.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="epic.easystock.RegisterActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="epic.easystock.ProductListActivity"
            android:label="@string/title_activity_product_list" >
        </activity>
        <activity
            android:name="epic.easystock.TestAddToProductListActivity"
            android:label="@string/title_activity_test_add_to_product_list" >
        </activity>
    </application>

</manifest>